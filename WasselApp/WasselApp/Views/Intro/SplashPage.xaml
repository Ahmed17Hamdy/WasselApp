<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White"
             x:Class="WasselApp.Views.Intro.SplashPage">
    <ContentPage.Content>
        <AbsoluteLayout Padding="2">
            <Image x:Name="splashImage"
                   AbsoluteLayout.LayoutBounds="0.5,0,250,250" AbsoluteLayout.LayoutFlags="PositionProportional"
                   Source="ImageSplash.png" Aspect="AspectFill"
                />  
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>