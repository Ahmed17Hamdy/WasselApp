<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns="http://xamarin.com/schemas/2014/forms"
    BackgroundColor="White"
    xmlns:i18="clr-namespace:WasselApp.Helpers"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WasselApp.Views.Popups.ConnectionPopup">
    <pages:PopupPage.Content>
        <Frame VerticalOptions="Center" HorizontalOptions="Center" CornerRadius="20" BackgroundColor="Red">
            <StackLayout  VerticalOptions="Center" 
                HorizontalOptions="Center"  BackgroundColor="White">
                <Label Text="{i18:Translate ConnectionError}"
               />
            </StackLayout>
        </Frame>
       
    </pages:PopupPage.Content>
</pages:PopupPage>